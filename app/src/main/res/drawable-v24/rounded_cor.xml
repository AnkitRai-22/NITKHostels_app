<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3CD8BB" />
            <gradient android:angle="-90" android:startColor="#26CAB0" android:endColor="#09B499"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B20DF7CB" />
            <solid android:color="#B20DF7CB"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3CD8BB" />
            <gradient android:angle="-90" android:startColor="#26CAB0" android:endColor="#09B499" />
        </shape>
    </item>
</selector>